@import "bootstrap";

.bold {
  font-weight: bold;
}

.uppercase {
  text-transform: uppercase;
}

.color-white {
  color: white;
}

.color-orange {
  color: #e45b00;
}

.color-black {
  color: #333;
}

.background-green {
  background-color: #e6e581;
}

.underlined {
  text-decoration: underline;
}

.rounded {
  border-radius: 16px;
}

.spacing-loose {
  margin-bottom: 32px;
}



body, h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: "Raleway", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

html, body {
  height: 100%;
}

body {
  background-color: #dbda4a;
  background-image: url(<%= asset_path 'top_pattern.png' %>);
  background-repeat: repeat-x;
}

.wrapper {
  min-height: 100%;
  height: auto !important;
  height: 100%;

  max-width: 960px;

  margin: 0 auto -240px;
  padding: 80px 16px 0;
  
  .push {
    height: 240px;
  }
}

.footer {
  position: relative;
  height: 240px;

  .background {
    width: 100%;
    position: absolute;
    bottom: 0;
    max-height: 240px;
  }
}




h1 {
  font-size: 120px;
}

h2 {
  font-weight: normal;
  font-size: 36px;
  
  strong {
    font-size: 44px;
  }  
}

section {
  padding: 32px;
  
  h3 {
    margin-top: 0;

    font-size: 20px;
  }
}

.sponsored-by {
  
  img {
    margin-left: 32px;
  }
  
}
