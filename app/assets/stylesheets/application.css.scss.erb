$border-radius-base: 0;
$border-radius-large: 0;

$font-family-sans-serif: 'Titillium Web', sans-serif;
$font-family-serif: 'Fjord One', serif;

$headings-font-family: $font-family-sans-serif;

@import "bootstrap";


/* reset bootstrap styles */
body {
  @extend .serif;
  @extend .black;

  text-align: center;
  font-size: 24px;
}

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
  font-weight: bold;
  margin: 0 0 24px 0;
}

h2 {
  font-size: 36px;
  @extend .uppercase;

  padding: 16px 0;

  max-width: 740px;

  margin-left: auto;
  margin-right: auto;
}

p {
  @extend .spacing-loose;
}

ul {
  padding-left: 24px;
}

@media (max-width: 768px) {
  h2 {
    font-size: 24px;
  }

  body {
    font-size: 16px;
  }

  small, .small {
    font-size: 100%;
  }

  .input-lg  {
    font-size: 14px;
  }
}

.btn {
  @extend .sans-serif;
  
  font-weight: bold;
  
  @extend .uppercase;
  @extend .white;
}

.btn-group-lg > .btn {
  width: 240px;
  white-space: normal;
  @extend .padding-medium;
}

.btn.border-white:hover {
  background-color: #f4f4f4;
  transition-duration: 0.3s;
}

.form-control {
  border: none;
}

.help-inline {
  color: #e45b00;
}

em {
  @extend .sans-serif;
}

.social-logo {
  @extend .white;
  @extend .bg-coral;

  height: 64px;
  width: 64px;
  line-height: 64px;

  border-radius: 32px;

  font-size: 40px;
}

.control-label {
  @extend .uppercase;
}

.control-group {
  @extend .spacing-loose;
}



/* modular styles */
.fixed {
  position: fixed;
  z-index: 100;
}

.bold {
  font-weight: bold;
}

.uppercase {
  text-transform: uppercase;
}

.underlined {
  text-decoration: underline;
}

.serif {
  font-family: $font-family-serif;
}

.sans-serif {
  font-family: $font-family-sans-serif;
}

.flush-right {
  padding-right: 0;
}

.flush-left {
  padding-left: 0;
}

.centered {
  text-align: center;
}

.align-left {
  text-align: left;
}

.width-full {
  width: 100%;
}

.width-screen {
  max-width: 820px;
  margin-left: auto;
  margin-right: auto;

  padding-left: 16px;
  padding-right: 16px;
}

.width-wide {
  @extend .width-screen;
  max-width: 960px;
}

.side-spaced {
  margin: 0 8px;
}

.inline-block {
  display: inline-block;
}

.extra-large {
  font-size: 200%;
  line-height: 100%;
}



.spacing-none {
  margin-bottom: 0;
}

.spacing-medium {
  margin-bottom: 16px;
}

.spacing-loose {
  margin-bottom: 32px;
}

.spacing-extra-loose {
  margin-bottom: 64px;
}

.spacing-ridiculously-loose {
  margin-bottom: 192px;
}

.leading-tight {
  line-height: 120%;
}

.padding-none {
  padding: 0;
}

.padding-light {
  padding: 8px;
}

.padding-medium {
  padding: 16px;
}

.padding-loose {
  padding: 32px;
}

.padding-extra-loose {
  padding: 64px 0;
}

.padding-vertical-loose {
  padding-top: 32px;
  padding-bottom: 32px;
}



.margin-none {
  margin: 0;
}

.margin-light {
  margin: 8px;
}

.margin-medium {
  margin: 16px;
}

.margin-loose {
  margin: 32px;
}

.margin-vertical-medium {
  margin-top: 16px;
  margin-bottom: 16px;
}



.teal {
  color: #1aaaac;
}

.coral {
  color: #fc5938;
}

.black {
  color: #404040;
}

.dark-black {
  color: #221e1f;
}

.straight-black {
  color: #000000;
}

.light-gray {
  color: #b7b7b7;
}

.dark-gray {
  color: #606060;
}

.white {
  color: #f4f4f4;
}

.bg-teal {
  background-color: #1aaaac;
}

.bg-coral {
  background-color: #fc5938;
}

.bg-mustard {
  background-color: #e1c009;
}

.bg-black {
  background-color: #141416;
}
.bg-light-gray {
  background-color: #f5f5f5;
}

.bg-gray {
  background-color: #434345;
}

.bg-white {
  background-color: #fff;
}

.border-white {
  border: 4px solid #f4f4f4;
}

.border-none {
  border: none;
}

.translucent {
  opacity: 0.75;
}


/* element specific styles */
#main {
  padding-top: 256px;

  background-image: url(<%= image_path("seattle_aerial@2x.jpg") %>);
  background-size: auto 100%;
  background-repeat: no-repeat;
  background-position: center center;

  #logo {
    @extend .padding-medium;

    width: 100%;
    max-width: 600px;
  }

  .btn-group-lg {

    > .btn {
      @extend .spacing-medium;
      @extend .side-spaced;
      @extend .border-none;
    }
  }
}

@media (min-width: 1400px) {
  #main {
    background-size: 100% auto;
  }
}

#date-location {
  border-color: white;
  border-width: 1px 0;
  border-style: solid;
}

#sponsors {
  background-image: url(<%= image_path("seattle_skyline@2x.png") %>);
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: center bottom;
  background-color: #675680;

  #substantial-logo {
    width: 100%;
    max-width: 392px;
  }
}

#header {
  @extend .fixed;
}

#call-for-proposals {
  padding-top: 136px;
}

@media (max-width: 768px) {
  #main {
    padding-top: 64px;
  }

  #header {
    position: static;
  }

  #call-for-proposals {
    padding-top: 64px;
  }
}
