@import "bootstrap";

body, h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: "Raleway", "Helvetica Neue", Helvetica, Arial, sans-serif;
  margin-top: 0;
}

.form-control {
  border: none;
}

.help-inline {
  color: #e45b00;
}

.flush-right {
  padding-right: 0;
}

.flush-left {
  padding-left: 0;
}

.centered {
  text-align: center;
}

.full-width {
  width: 100%;
}

.bold {
  font-weight: bold;
}

.uppercase {
  text-transform: uppercase;
}

.underlined {
  text-decoration: underline;
}

.spacing-none {
  margin-bottom: 0;
}

.spacing-medium {
  margin-bottom: 12px;
}

.spacing-loose {
  margin-bottom: 32px;
}

.padding-none {
  padding: 0;
}



.teal {
  color: #1aaaac;
}

.coral {
  color: #fc5938;
}

.black {
  color: #2b2b2b;
}

.white {
  color: #e4e4e4;
}

.bg-teal {
  background-color: #1aaaac;
}

.bg-coral {
  background-color: #fc5938;
}

.bg-black {
  background-color: #141416;
}

.bg-white {
  background-color: #fff;
}

.translucent {
  opacity: 0.75;
}
