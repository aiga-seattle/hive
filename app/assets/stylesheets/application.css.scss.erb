@import "bootstrap";


/* reset bootstrap styles */
body {
  @extend .serif;
  
  text-align: center;
  font-size: 24px;
}

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
  @extend .sans-serif;
  
  font-weight: bold;
  margin: 0 0 24px 0;
}

h2 {
  font-size: 36px;
  @extend .uppercase;

  max-width: 740px;
  
  margin-left: auto;
  margin-right: auto;
}

p {
  @extend .spacing-loose;

  max-width: 820px;
  margin-left: auto;
  margin-right: auto;
}

.btn {
  font-family: 'Titillium Web', sans-serif;
  font-weight: bold;
  
  @extend .uppercase;
  @extend .white;
  @extend .border-white;
}

.btn-group-lg > .btn {
  border-radius: 0;
  width: 240px;
  white-space: normal;
  padding: 16px;
}

.form-control {
  border: none;
}

.help-inline {
  color: #e45b00;
}

em {
  @extend .sans-serif;
}



/* modular styles */
.bold {
  font-weight: bold;
}

.uppercase {
  text-transform: uppercase;
}

.underlined {
  text-decoration: underline;
}

.serif {
font-family: 'Fjord One', serif;
}

.sans-serif {
  font-family: 'Titillium Web', sans-serif;
}

.flush-right {
  padding-right: 0;
}

.flush-left {
  padding-left: 0;
}

.centered {
  text-align: center;
}

.full-width {
  width: 100%;
}

.side-spaced {
  margin: 0 8px;
}



.spacing-none {
  margin-bottom: 0;
}

.spacing-medium {
  margin-bottom: 16px;
}

.spacing-loose {
  margin-bottom: 32px;
}

.spacing-extra-loose {
  margin-bottom: 64px;
}



.padding-none {
  padding: 0;
}

.padding-medium {
  padding: 16px;
}

.padding-loose {
  padding: 32px;
}

.padding-extra-loose {
  padding: 64px 0;
}

.margin-none {
  margin: 0;
}



.teal {
  color: #1aaaac;
}

.coral {
  color: #fc5938;
}

.black {
  color: #2b2b2b;
}

.white {
  color: #f4f4f4;
}

.bg-teal {
  background-color: #1aaaac;
}

.bg-coral {
  background-color: #fc5938;
}

.bg-black {
  background-color: #141416;
}

.bg-white {
  background-color: #fff;
}

.border-white {
  border: 4px solid #f4f4f4;
}

.border-none {
  border: none;
}

.translucent {
  opacity: 0.75;
}


/* element specific styles */
#main {
  padding-top: 256px;

  .btn-group-lg {

    > .btn {
      @extend .spacing-medium;
      @extend .side-spaced;
      @extend .border-none;
    }
  }
}

#date-location {
  border-color: white;
  border-width: 1px 0;
  border-style: solid;
}

#sponsors {
  background-image: url(//placekitten.com/g/1280/480);
}
