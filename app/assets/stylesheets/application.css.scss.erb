@import "bootstrap";

body, h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
  font-family: "Raleway", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.form-control {
  border: none;
}

.flush-right {
  padding-right: 0;
}

.flush-left {
  padding-left: 0;
}

.bold {
  font-weight: bold;
}

.uppercase {
  text-transform: uppercase;
}

.color-white {
  color: white;
}

.color-orange {
  color: #e45b00;
}

.color-black {
  color: #333;
}

.background-green {
  background-color: #e6e581;
}

.background-blue {
  background-color: #009999;
}

.underlined {
  text-decoration: underline;
}

.rounded {
  border-radius: 16px;
}

.rounded-left {
  border-radius: 16px 0 0 16px;
}

.rounded-right {
  border-radius: 0 16px 16px 0;
}

.spacing-loose {
  margin-bottom: 32px;
}

.padding-none {
  padding: 0;
}



$footer-height: 240px;
$footer-height-mobile: 150px;

html, body {
  height: 100%;
}

body {
  background-color: #dbda4a;
  background-image: url(<%= asset_path 'top_pattern@2x.png' %>);
  background-size: 49px 44px;
  background-repeat: repeat-x;
}

.wrapper {
  min-height: 100%;
  height: auto !important;
  height: 100%;

  max-width: 960px;

  margin: 0 auto (-$footer-height);
  padding: 80px 16px 0;
  
  .push {
    height: $footer-height;
  }
}

.footer {
  position: relative;
  height: $footer-height;

  .background {
    width: 100%;
    position: absolute;
    bottom: 0;
    max-height: $footer-height;
  }
}


@media (max-width: 767px) {
  .wrapper {
    margin-bottom: -$footer-height-mobile;

    .push {
      height: $footer-height-mobile;
    }
  }

  .footer {
    height: $footer-height-mobile;
    
    .background {
      max-height: $footer-height-mobile;
    }
  }
}




h1 {
  font-size: 120px;
}

h2 {
  font-weight: normal;
  font-size: 36px;
  
  strong {
    font-size: 44px;
  }  
}

@media (max-width: 767px) {
  h1 {
    font-size: 68px;
  }

  h2 {
    font-size: 22px;
    
    strong {
      font-size: 28px;
    }
  }
}

section {
  padding: 32px;
  
  h3 {
    margin-top: 0;

    font-size: 20px;
  }
}

.sponsored-by {
  
  img {
    margin-left: 32px;
  }
  
}
