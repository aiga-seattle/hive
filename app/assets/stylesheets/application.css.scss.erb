$border-radius-base: 0;
$border-radius-large: 0;

$font-family-sans-serif: 'Titillium Web', sans-serif;
$font-family-serif: 'Fjord One', serif;

$headings-font-family: $font-family-sans-serif;

@import "bootstrap";


/* reset bootstrap styles */
body {
  @extend .serif;
  @extend .bg-black;
  @extend .white;
  
  text-align: center;
  font-size: 24px;
}

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
  font-weight: bold;
  margin: 0 0 24px 0;
}

h2 {
  font-size: 36px;
  @extend .uppercase;

  max-width: 740px;
  
  margin-left: auto;
  margin-right: auto;
}

p {
  @extend .spacing-loose;
  @extend .width-screen;
}

.btn {
  @extend .sans-serif;
  
  font-weight: bold;
  
  @extend .uppercase;
  @extend .white;
  @extend .border-white;
}

.btn-group-lg > .btn {
  width: 240px;
  white-space: normal;
  @extend .padding-medium;
}

.form-control {
  border: none;
}

.help-inline {
  color: #e45b00;
}

em {
  @extend .sans-serif;
}

.social-logo {
  @extend .white;
  @extend .bg-coral;
  
  height: 64px;
  width: 64px;
  line-height: 64px;
  
  border-radius: 32px;
  
  font-size: 40px;
}



/* modular styles */
.bold {
  font-weight: bold;
}

.uppercase {
  text-transform: uppercase;
}

.underlined {
  text-decoration: underline;
}

.serif {
  font-family: $font-family-serif;
}

.sans-serif {
  font-family: $font-family-sans-serif;
}

.flush-right {
  padding-right: 0;
}

.flush-left {
  padding-left: 0;
}

.centered {
  text-align: center;
}

.align-left {
  text-align: left;
}

.width-full {
  width: 100%;
}

.width-screen {
  max-width: 820px;
  margin-left: auto;
  margin-right: auto;
}

.side-spaced {
  margin: 0 8px;
}



.spacing-none {
  margin-bottom: 0;
}

.spacing-medium {
  margin-bottom: 16px;
}

.spacing-loose {
  margin-bottom: 32px;
}

.spacing-extra-loose {
  margin-bottom: 64px;
}



.padding-none {
  padding: 0;
}

.padding-light {
  padding: 8px;
}

.padding-medium {
  padding: 16px;
}

.padding-loose {
  padding: 32px;
}

.padding-extra-loose {
  padding: 64px 0;
}

.padding-horizontal-extra-loose {
  padding: 0 64px;
}

.margin-none {
  margin: 0;
}

.margin-loose {
  margin: 32px;
}



.teal {
  color: #1aaaac;
}

.coral {
  color: #fc5938;
}

.black {
  color: #2b2b2b;
}

.light-gray {
  color: #b7b7b7;
}

.white {
  color: #f4f4f4;
}

.bg-teal {
  background-color: #1aaaac;
}

.bg-coral {
  background-color: #fc5938;
}

.bg-black {
  background-color: #141416;
}

.bg-gray {
  background-color: #434345;
}

.bg-white {
  background-color: #fff;
}

.border-white {
  border: 4px solid #f4f4f4;
}

.border-none {
  border: none;
}

.translucent {
  opacity: 0.75;
}


/* element specific styles */
#main {
  padding-top: 256px;
  
  background-image: url(<%= image_path("seattle_aerial@2x.png") %>);
  background-size: auto 100%;
  background-repeat: no-repeat;
  background-position: center center;
  
  #logo {
    @extend .padding-medium;

    width: 100%;
    max-width: 600px;
  }

  .btn-group-lg {

    > .btn {
      @extend .spacing-medium;
      @extend .side-spaced;
      @extend .border-none;
    }
  }
}

@media (min-width: 1200px) {
  #main {
    background-size: 100% auto;
  }
}

#date-location {
  border-color: white;
  border-width: 1px 0;
  border-style: solid;
}

#sponsors {
  background-image: url(<%= image_path("seattle_skyline@2x.png") %>);
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: center bottom;
  background-color: #6e577c;
}
