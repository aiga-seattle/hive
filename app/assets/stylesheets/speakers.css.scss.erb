#page-main {
  padding-top: 40px;

  background-image: url(<%= image_path("seattle_aerial@2x.jpg") %>);
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: center center;

  #logo {
    @extend .padding-medium;

    width: 100%;
    max-width: 413px;
    margin-bottom: 33px;
  }

  .btn-group-lg {

    > .btn {
      @extend .spacing-medium;
      @extend .side-spaced;
      @extend .border-none;
    }
  }
}

@media (min-width: 1400px) {
  #page-main {
    background-size: 100% auto;
  }
}

@media (max-width: 768px) {
  #page-main {
    padding-top: 64px;
  }

  #header {
    position: static;
  }

  #call-for-proposals {
    padding-top: 64px;
  }
}

#speaker-page {
  h2 {
    margin: 0 0;
  }

  .speaker-details, .speaker-profile {
    padding-top: 60px;
  }

  .speaker-details p{
    max-width: 638px;
  }

  .speaker-name {
    text-transform: uppercase;
    line-height: 120%;
    margin-bottom: 0px;
    font-weight: bold;
    font-size: 30px;
  }

  .speaker-company {
    text-transform: uppercase;
    line-height: 120%;
    margin-bottom: 48px;
    font-size: 92%;
    color: #fc5938;
    font-style: italic;
    font-size: 30px;
  }

  .speaker-company:before {
    content: "/ ";
  }

  .speaker-topic {
    text-transform: uppercase;
    line-height: 120%;
    margin-bottom: 12px;
    color: #1aaaac;
    font-style: bold;
  }

  .keynote:before {
    content: "Keynote: "
  }

  .speaker-profile {
    max-width: 275px;
    font-size: 16px;

    dt {
      font-weight: normal;
    }
    dd {
      color: #fc5938;
    }
  }
}